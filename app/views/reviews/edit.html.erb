<div class="center col-md-6 col-md-offset-3 review_form">
	<h1>Edit Post</h1>
<%= form_for @review do |f| %>
	<%= f.hidden_field :gsi_id %>	
	<%= f.label :title %>
	<%= f.text_field :title %>
	<br />	
	<%= f.label :body %>
	<%= f.text_area :body %>
	<br />
	<%= f.label :rating %>
	<%= f.number_field :rating %>
	<br />
	<%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
</div>
